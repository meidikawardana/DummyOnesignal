<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pintar_android.dummyonesignal">

    <uses-permission android:name="android.permission.INTERNET"/> <!--untuk meminta akses penggunaan internet ke hape-->

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity"/>

        <activity
            android:name=".LoginActivity"
            android:label="Dummy Onesignal - Masuk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/> <!-- buat supaya LoginActivity ditampilkan pertama kali di aplikasi -->
            </intent-filter>
        </activity>
    </application>

</manifest>